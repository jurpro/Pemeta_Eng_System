<resources
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PemetaEngineeringSystem" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color.
        <item name="colorPrimary">@color/orange_500</item>-->
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color.
        <item name="colorSecondary">@color/teal_200</item>-->
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:fontFamily">@font/abadi_mt_condensed</item>

        <item name="colorPrimary">@color/pemeta_primary</item>
        <item name="colorSecondary">@color/pemeta_secondary</item>
        <item name="colorTertiary">@color/pemeta_tertiary</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="Theme.PemetaEngineeringSystem.NoActionBar">
        <item name="windowActionBar">false</item>

    </style>

    <style name="Theme.PemetaEngineeringSystem.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar" />

    <style name="Theme.PemetaEngineeringSystem.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>