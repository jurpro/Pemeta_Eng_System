<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_report"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginBottom="16dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/item_list_img_report"
            android:layout_width="400dp"
            android:layout_height="180dp"
            android:contentDescription="@string/list_camera_report"
            android:transitionName="imageReport"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_photo_camera_svgrepo_com"
            tools:ignore="ImageContrastCheck"
            tools:src="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/item_list_name_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:text="@string/list_name_report"
            android:textSize="16sp"
            android:textStyle="bold"
            android:transitionName="nameStory"
            app:layout_constraintStart_toStartOf="@+id/item_list_img_report"
            app:layout_constraintTop_toBottomOf="@+id/item_list_img_report" />

        <TextView
            android:id="@+id/item_list_name_detail_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/list_name_report"
            android:textSize="16sp"
            android:textStyle="bold"
            android:transitionName="nameStory"
            app:layout_constraintStart_toEndOf="@id/guideline9"
            app:layout_constraintTop_toTopOf="@+id/item_list_name_report" />

        <TextView
            android:id="@+id/item_list_location_detail_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/list_location_report"
            android:textSize="16sp"
            android:textStyle="bold"
            android:transitionName="nameStory"
            app:layout_constraintStart_toEndOf="@id/guideline9"
            app:layout_constraintTop_toBottomOf="@+id/item_list_name_detail_report" />

        <TextView
            android:id="@+id/item_list_date_detail_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/list_date_report"
            android:textSize="16sp"
            android:textStyle="bold"
            android:transitionName="nameStory"
            app:layout_constraintStart_toEndOf="@id/guideline9"
            app:layout_constraintTop_toBottomOf="@+id/item_list_location_detail_report" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="128dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>