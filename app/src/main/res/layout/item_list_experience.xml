<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_list_experience"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="4dp"
    card_view:cardCornerRadius="20dp"
    android:elevation="14dp"
    android:padding="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/material_dynamic_primary90"
        android:padding="8dp">

        <ImageView
            android:id="@+id/img_itemPhotoSearch"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_itemUsernameSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="24dp"
            android:layout_toEndOf="@id/img_itemPhotoSearch"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/cardview_dark_background"
            card_view:layout_constraintBottom_toBottomOf="@+id/img_itemPhotoSearch"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toEndOf="@+id/img_itemPhotoSearch"
            card_view:layout_constraintTop_toTopOf="@+id/img_itemPhotoSearch"
            tools:text="@string/list_pengalaman_title" />

        <TextView
            android:id="@+id/tv_urlAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/list_pengalaman_title"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="@color/cardview_dark_background"
            card_view:layout_constraintBottom_toBottomOf="@+id/img_itemPhotoSearch"
            card_view:layout_constraintEnd_toEndOf="@+id/tv_itemUsernameSearch"
            card_view:layout_constraintStart_toStartOf="@+id/tv_itemUsernameSearch"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_itemUsernameSearch"
            tools:ignore="SmallSp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>