<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ui.splash.SplashScreenActivity">

    <!-- app:layout_constraintBottom_toTopOf="@+id/splash_screen_text_from" -->

    <ImageView
        android:id="@+id/splash_screen_logo_pemeta"
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:layout_marginTop="28dp"
        android:contentDescription="@string/splash_logo_desc"
        android:src="@drawable/logo_my_pemeta_screensplash"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/splash_screen_text_loading1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/splash_loading1"
        android:textColor="#78909C"
        android:textSize="16sp"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="@id/splash_screen_logo_pemeta"
        app:layout_constraintRight_toRightOf="@id/splash_screen_logo_pemeta"
        app:layout_constraintTop_toBottomOf="@id/splash_screen_logo_pemeta" />

    <TextView
        android:id="@+id/splash_screen_text_loading2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/splash_loading2"
        android:textColor="#78909C"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/splash_screen_text_loading1"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintLeft_toLeftOf="@id/splash_screen_logo_pemeta"
        app:layout_constraintRight_toRightOf="@id/splash_screen_logo_pemeta"
        app:layout_constraintStart_toStartOf="@+id/splash_screen_text_loading1"
        app:layout_constraintTop_toBottomOf="@id/splash_screen_text_loading1"
        app:layout_constraintVertical_bias="0.174" />

