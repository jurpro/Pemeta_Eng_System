        <TextView
            android:id="@+id/personil_detail_demobilisasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/detail_personil_demobilisasi"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@id/guideline10"
            app:layout_constraintTop_toBottomOf="@id/personil_detail_mobilisasi_teks" />

        <TextView
            android:id="@+id/personil_detail_demobilisasi_teks"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="24dp"
            android:gravity="left"
            android:text="@string/detail_personil_demobilisasi"
