<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card_viewSearch"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="4dp"
    card_view:cardCornerRadius="20dp"
    card_view:cardBackgroundColor="@color/material_dynamic_secondary90"
    android:elevation="14dp"
    android:padding="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="65dp" />
        
        <ImageView
            android:id="@+id/personil_detail_alamat_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_profile_agenda_address_book_svgrepo_com"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/personil_detail_alamat"
            app:layout_constraintEnd_toStartOf="@id/guideline10"
            android:contentDescription="@string/detail_personil_alamat" />

        <TextView
            android:id="@+id/personil_detail_alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:text="@string/detail_personil_alamat"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@id/guideline10"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/personil_detail_alamat_teks"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:gravity="left"
            android:text="@string/detail_personil_alamat"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@id/guideline10"
            app:layout_constraintTop_toBottomOf="@id/personil_detail_alamat" />

        <ImageView
            android:id="@+id/personil_detail_email_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_profile_email_svgrepo_com"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/personil_detail_email"
            app:layout_constraintEnd_toStartOf="@id/guideline10"
            android:contentDescription="@string/detail_personil_email" />

        <TextView
            android:id="@+id/personil_detail_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="@string/detail_personil_email"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@id/guideline10"
            app:layout_constraintTop_toBottomOf="@id/personil_detail_alamat_teks" />

        <TextView
            android:id="@+id/personil_detail_email_teks"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:gravity="left"
            android:text="@string/detail_personil_email"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@id/guideline10"
            app:layout_constraintTop_toBottomOf="@id/personil_detail_email" />

        <ImageView
            android:id="@+id/personil_detail_contact_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:contentDescription="@string/detail_personil_contact"
            android:src="@drawable/ic_profile_phone_svgrepo_com"
            app:layout_constraintEnd_toStartOf="@id/guideline10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/personil_detail_contact"
            card_view:ignore="ImageContrastCheck" />

        <TextView
            android:id="@+id/personil_detail_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="@string/detail_personil_contact"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@id/guideline10"
            app:layout_constraintTop_toBottomOf="@id/personil_detail_email_teks" />

        <TextView
            android:id="@+id/personil_detail_contact_teks"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="24dp"
            android:gravity="left"
            android:text="@string/detail_personil_contact"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/guideline10"
            app:layout_constraintTop_toBottomOf="@id/personil_detail_contact" />

        <!--<TextView
            android:id="@+id/personil_detail_penempatan"
