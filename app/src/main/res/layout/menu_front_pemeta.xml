<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/home_card_view_pemeta"
    app:cardCornerRadius="28dp"
    android:elevation="14dp"
    android:padding="10dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginBottom="16dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_icon_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintCircleRadius="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/home_portfolio"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="24dp"
            android:contentDescription="@string/home_portfolio"
            android:src="@drawable/ic_portfolio_svgrepo_com"
            app:layout_constraintBottom_toBottomOf="@id/home_our_project"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/home_our_project" />

        <TextView
            android:id="@+id/home_portfolio_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_portfolio"
            app:layout_constraintEnd_toEndOf="@id/home_portfolio"
            app:layout_constraintStart_toStartOf="@id/home_portfolio"
            app:layout_constraintTop_toBottomOf="@id/home_portfolio" />

        <ImageView
            android:id="@+id/home_our_project"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/home_our_project"
            android:src="@drawable/ic_perfect_worker_svgrepo_com"
            app:layout_constraintEnd_toStartOf="@+id/home_our_client"
            app:layout_constraintStart_toEndOf="@id/home_portfolio"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/home_our_project_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_our_project"
            app:layout_constraintEnd_toEndOf="@id/home_our_project"
            app:layout_constraintStart_toStartOf="@id/home_our_project"
            app:layout_constraintTop_toBottomOf="@id/home_our_project" />

        <ImageView
            android:id="@+id/home_our_client"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="24dp"
            android:contentDescription="@string/home_our_client"
            android:src="@drawable/ic_client_profile_svgrepo_com"
            app:layout_constraintBottom_toBottomOf="@id/home_our_project"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/home_our_project"
            app:layout_constraintTop_toTopOf="@id/home_our_project" />

        <TextView
            android:id="@+id/home_our_client_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_our_client"
            app:layout_constraintEnd_toEndOf="@id/home_our_client"
            app:layout_constraintStart_toStartOf="@id/home_our_client"
            app:layout_constraintTop_toBottomOf="@id/home_our_client" />

        <ImageView
            android:id="@+id/home_our_experience"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/home_our_experience"
            android:src="@drawable/ic_worker_svgrepo_com"
            app:layout_constraintEnd_toEndOf="@id/home_portfolio"
            app:layout_constraintStart_toStartOf="@id/home_portfolio"
            app:layout_constraintTop_toBottomOf="@id/home_portfolio_text" />

        <TextView
            android:id="@+id/home_our_experience_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_our_experience"
            app:layout_constraintEnd_toEndOf="@id/home_our_experience"
            app:layout_constraintStart_toStartOf="@id/home_our_experience"
            app:layout_constraintTop_toBottomOf="@id/home_our_experience" />

        <ImageView
            android:id="@+id/home_our_experts"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/home_our_experts"
            android:src="@drawable/ic_engineer_working_svgrepo_com"
            app:layout_constraintEnd_toEndOf="@id/home_our_project"
            app:layout_constraintStart_toStartOf="@id/home_our_project"
            app:layout_constraintTop_toBottomOf="@id/home_our_project_text" />

        <TextView
            android:id="@+id/home_our_experts_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_our_experts"
            app:layout_constraintEnd_toEndOf="@id/home_our_experts"
            app:layout_constraintStart_toStartOf="@id/home_our_experts"
            app:layout_constraintTop_toBottomOf="@id/home_our_experts" />

        <ImageView
            android:id="@+id/home_about_us"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/home_about_us"
            android:src="@drawable/ic_complex_engineering_global_svgrepo_com"
            app:layout_constraintEnd_toEndOf="@id/home_our_client"
            app:layout_constraintStart_toStartOf="@id/home_our_client"
            app:layout_constraintTop_toBottomOf="@id/home_our_client_text" />

        <TextView
            android:id="@+id/home_about_us_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/home_about_us"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/home_about_us"
            app:layout_constraintStart_toStartOf="@id/home_about_us"
            app:layout_constraintTop_toBottomOf="@id/home_about_us" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>